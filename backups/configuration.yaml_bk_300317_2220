#Relay

switch:
 -  platform: mqtt
    name: "Lamp"
    state_topic: "ha/switch1"
    command_topic: "ha/switch1"
    qos: 0
    payload_on: "OFF"
    payload_off: "ON"
    optimistic:
    false retain: true

 -  platform: mqtt
    name: "Fan"
    state_topic: "ha/switch2"
    command_topic: "ha/switch2"
    qos: 0
    payload_on: "OFF"
    payload_off: "ON"
    optimistic:
    false retain: true

 -  platform: mqtt
    name: "Buzzer"
    state_topic: "ha/buzzer1"
    command_topic: "ha/buzzer1"
    qos: 0
    payload_on: "ON"
    payload_off: "OFF"
    optimistic:
    false retain: true

# Text to speech
tts:
  platform: google


automation:
 - alias: turn ON FAN 
   condition:
     - condition: state
       entity_id: switch.Fan
       state: 'off' 
   trigger:
     platform: numeric_state
     entity_id: sensor.temperature
     above: 25
   action:
     service: homeassistant.turn_on
     entity_id: switch.Fan

 - alias: turn OFF FAN
   condition:
     - condition: state
       entity_id: switch.Fan
       state: 'on'
   trigger:
     platform: numeric_state
     entity_id: sensor.temperature
     below: 24
   action:
     service: homeassistant.turn_off
     entity_id: switch.Fan

 - alias: Door Alarm
   trigger:
     platform: state
     entity_id: sensor.front_DOOR
     state: 'Door OPENED'
   action:
     service: homeassistant.turn_on
     entity_id: switch.Buzzer



